<html>
	<head>
		<link rel="stylesheet" type="text/css" href="/css/style.css"/>
 {{> resources}}
  <title>@{{username}} - Qboard </title>
	</head>

	<body>
<br>
{{#qReturn}}
<p>{{qReturn}}</p>
{{/qReturn}}

<img src="/images/art.jpg"/>
{{#updated}}
<p class="wtxt">Account successfuly updated</p>
{{/updated}}

<p>{{#request}}{{request}} successful. <br>{{/request}} Welcome to Q board</p>

{{#self}}
<p>Hello there {{name}}. @{{username}} </p>
<h class="wtxt">Your email is:</h> <p>{{email}}</p>

<h class="wtxt">Date of birth:</h> <p>{{dob}}</p>
<h class="wtxt">Created</h> <p>{{created}}</p>

<h class="wtxt">Profile hint:</h><p>{{hint}}</p>

<a href="/q/new"><button>New Question</button></a><br>

<br><br><a href="/account/edit"><button>Edit profile</button></a>
<br><br><a href="account/logout"><button>Log Out</button></a>
{{/self}}

{{^self}}
<p>You are viewing @{{username}}'s profile </p>
<h class="wtxt">Created</h> <p>{{created}}</p>

<h class="wtxt">Profile hint:</h><p>{{hint}}</p>
{{/self}}


	{{#questions}}
	<p class="wtxt">QUESTIONS</p>
	{{./}}
		<a href="q/{{refID}}"><h class="wtxt">Question: </h>{{q}}</a><br>
		<h class="wtxt">ID: </h>{{id}}<br>
		<h class="wtxt">Date Posted: </h>{{datePosted}}<br><br>

	{{/questions}}










	</body>
</html>

